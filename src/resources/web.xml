<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">

    <display-name>Quick Servlet Demo Application</display-name>





    <listener>
        <listener-class>razarm.tosan.controller.servlet.listener.MyServletContextListener</listener-class>
    </listener>


    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>razarm.tosan.controller.servlet.Home</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Admin</servlet-name>
        <servlet-class>razarm.tosan.controller.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>razarm.tosan.controller.servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>razarm.tosan.controller.servlet.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>



    
    <servlet>
        <servlet-name>Tour</servlet-name>
        <servlet-class>razarm.tosan.controller.servlet.TourServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Tour</servlet-name>
        <url-pattern>/tour</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RestTour</servlet-name>
        <servlet-class>razarm.tosan.controller.servlet.rest.RestTourServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RestTour</servlet-name>
        <url-pattern>/rest/tour</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookingTour</servlet-name>
        <servlet-class>razarm.tosan.controller.servlet.BookingTourServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingTour</servlet-name>
        <url-pattern>/booking/tour/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Booking</servlet-name>
        <servlet-class>razarm.tosan.controller.servlet.BookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Booking</servlet-name>
        <url-pattern>/booking/*</url-pattern>
    </servlet-mapping>

<!--    <servlet-mapping>-->
<!--        <servlet-name>Booking</servlet-name>-->
<!--        <url-pattern>/booking/tour</url-pattern>-->
<!--    </servlet-mapping>-->



    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>razarm.tosan.controller.servlet.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



</web-app>